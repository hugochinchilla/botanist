# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[composer.{json,lock}]
indent_style = space
indent_size = 2

# Matches the exact files either package.json or .travis.yml
[*.php]
indent_style = space
indent_size = 4